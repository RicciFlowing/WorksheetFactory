<div class="row">
  <div class="col-md-3">
    <ul class="list-unstyled">
      {{#each sortedGroups as |group|}}
      <li>
        {{#if group.id}}
        <div class="group">
          <h2> {{#link-to 'groups.show' group.id}}{{group.name}} {{/link-to}}    {{group.year}}</h2>
          <div {{action 'delete_group' group}} class="btn btn-danger pull-right">
             <span class="fa fa-cross"> </span> Delete
          </div>
          <div class="group-details">
            Grade: {{group.grade}}
            Current number of worksheets: {{group.worksheet_count}}
          </div>
          <p>
            {{group.description}}
          </p>
        </div>
      {{else if isExpanded}}
      <div class="group">
        <h2> {{#link-to 'groups.show' group.id}}{{group.name}} {{/link-to}}    {{group.year}}</h2>
        <div class="group-details">
          Grade: {{group.grade}}
          Current number of worksheets: {{group.worksheet_count}}
        </div>
        <p>
          {{group.description}}
        </p>
      </div>
      {{/if}}
      </li>
      {{/each}}
      <li class="group">
        {{#link-to 'groups.new' class="circled-plus"}} + {{/link-to}}
      </li>
    </ul>

  </div>

  <div class="col-md-9">
     {{outlet}}
  </div>
</div>
