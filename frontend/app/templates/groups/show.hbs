<h2> {{group.name}}</h2>
<ul class="list-unstyled">
  {{#each group.worksheets as |worksheet|}}
  <li> {{#link-to 'worksheets.show' worksheet}} {{worksheet.title}} {{/link-to}}</li>
  {{/each}}
</ul>

<form role="form">
  <h3> Create a new worksheet</h3>
  {{input value=new_worksheet.title}}
  <button class= "btn" type="button" {{action "submit"}}> Create </button>
</form>
