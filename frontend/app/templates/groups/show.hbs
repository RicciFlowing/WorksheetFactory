<h2> {{group.name}}</h2>
{{#link-to 'groups.index' class="btn btn-default"}} Back to all groups {{/link-to}}
<ul class="list-unstyled">
  {{#each group.worksheets as |worksheet|}}
    {{worksheet-short worksheet=worksheet action='deleteWorksheet'}}
  {{/each}}
</ul>

<form role="form" onsubmit="return false">
  <h3> Create a new worksheet</h3>
  {{input value=new_worksheet.title enter="submit"}}
  <button class= "btn" type="button" {{action "submit"}}> Create </button>
</form>
