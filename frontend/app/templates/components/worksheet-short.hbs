<h3>
  {{#link-to 'worksheets.show' worksheet.id}}
    {{worksheet.title}}
  {{/link-to}}
</h3>
{{#if archived}}
 <button class="btn btn-default" {{action "refresh"}}>Refresh</button>
{{else}}
<span {{action "archive"}}>
  {{#linkTo 'groups.show.worksheet_set.new_result' worksheet.id class="btn btn-danger"}} Archive {{/linkTo}}
</span>
{{/if}}


{{yield}}
