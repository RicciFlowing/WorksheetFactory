<form {{action "save" on="submit"}}>
  <p>
    <label>Name:
      {{input value=factory.name}}
    </label>
  </p>

<div class="row">
  <div class="col-md-6">
    <h3>Selected Skills</h3>

    {{#draggable-object-target action="addToSelection" overrideClass="drop"}}
    {{#each selection as |skill|}}
      {{#draggable-object content=skill overrideClass="skill"}}
        {{skill.name}}
      {{/draggable-object}}
    {{/each}}
    {{#unless hasSelection}}
    Drag skill here
    {{/unless}}
    {{/draggable-object-target}}
    <div class="centered small">
      {{#draggable-object-target action="removeFromSelection"}}
       {{fa-icon "trash" size=4}}
      {{/draggable-object-target}}
    </div>
  </div>
  <div class="col-md-6">
    <h3>Available skills</h3>
    <div class="row">
      <div class="col-md-6">
            {{outlet}}
      </div>
      <div class="col-md-6">
        <ul class="list-group">
          {{#each sectors as |sector|}}
            <li class="list-group-item">  {{#link-to 'factories.new.sector' sector}} {{sector.title}} {{/link-to}}  <span class="badge">{{sector.skillCount}}</span></li>
          {{/each}}
        </ul>
      </div>
    </div>

  </div>
</div>


  <input type="submit" value="Save"/>
  <button {{action "cancel"}}>Cancel</button>
</form>
