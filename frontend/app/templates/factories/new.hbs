
<div class="content-wrapper">
  <form {{action "save" on="submit"}}>
    {{input value=factory.name class="big-input" placeholder="Name"}}

  <section id="skill-selection">
  <div class="row">
    <div class="col-4">
      <h3 class="factory-headings">Ausgewählte Fähigkeiten</h3>
      {{#draggable-object-target action="addToSelection" overrideClass="drop-zone"}}
      {{#each selection as |skill|}}
        {{#draggable-object content=skill overrideClass="skill"}}
          {{skill.name}}
        {{/draggable-object}}
      {{/each}}
      {{#unless hasSelection}}
        Drop
      {{/unless}}
      {{/draggable-object-target}}
      <div class="centered small">
        {{#draggable-object-target action="removeFromSelection"}}
         {{fa-icon "trash" size=4}}
        {{/draggable-object-target}}
      </div>
    </div>
    <div class="col-8">

      <div class="row">
        <div class="col-6">
          <h3 class="factory-headings">Fähigkeiten</h3>
              {{outlet}}
        </div>
        <div class="col-6">
          <h3 class="factory-headings">Lernbereiche</h3>
          <div class="list-group">
            {{#each sectors as |sector|}}
             {{#link-to 'factories.new.sector' sector class="list-group-item"}}
              {{sector.title}}
              <span class="badge">{{sector.skillCount}}</span>
             {{/link-to}}
            {{/each}}
          </div>
        </div>
      </div>

    </div>
  </div>
  </section>

    <input type="submit" value="Save" class="btn btn-primary"/>
    <button {{action "cancel"}} class="btn btn-warning">Cancel</button>
  </form>

</div>
