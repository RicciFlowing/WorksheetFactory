<form {{action "save" on="submit"}}>
  <p>
    <label>Name:
      {{input value=factory.name class="form-control"}}
    </label>
  </p>

<div class="row">
  <div class="col-md-6">
    <h3>Selected Skills</h3>

    {{#draggable-object-target action="addToSelection" overrideClass="drop"}}
    {{#each selection as |skill|}}
      {{#draggable-object content=skill overrideClass="skill"}}
        {{skill.name}}
      {{/draggable-object}}
    {{/each}}
    {{#unless hasSelection}}
    Drag skill here
    {{/unless}}
    {{/draggable-object-target}}
    <div class="centered small">
      {{#draggable-object-target action="removeFromSelection"}}
       {{fa-icon "trash" size=4}}
      {{/draggable-object-target}}
    </div>
  </div>
  <div class="col-md-6">
    <h3>Available skills</h3>
    <div class="row">
      <div class="col-md-6">
            {{outlet}}
      </div>
      <div class="col-md-6">
        <div class="list-group">
          {{#each sectors as |sector|}}
           {{#link-to 'factories.new.sector' sector class="list-group-item"}}
            {{sector.title}}
            <span class="badge">{{sector.skillCount}}</span>
           {{/link-to}}
          {{/each}}
        </div>
      </div>
    </div>

  </div>
</div>


  <input type="submit" value="Save" class="btn btn-primary"/>
  <button {{action "cancel"}} class="btn btn-warning">Cancel</button>
</form>
