.centered {
  margin-left: auto;
  margin-right: auto;
}

.small {
  max-width: 100px;
}

.delete-button {
  display: inline;
}

.inline {
  display: inline;
}

.green{
  background-color: #80D480;
}

.red {
  background-color: #E66565;
}

.clicker-label {
  margin-top: 0px;
}

.clicker-form {
  width: 240px;
  border-radius: 5px;
  text-align: center;
  padding: 5px;
  margin-top: 5px;
  margin-bottom: 5px;
}

.margin-side {
  margin-left: 20px;
  margin-right: 20px;
}

.flex-container {
  display: flex;
  justify-content: space-around;

}

.space-between {
  justify-content: space-between;
}

.clicker {
  font-size: 14px;
  padding: 5px;
  margin-top: 5px;
  margin-bottom: 5px;
  background-color: #ABABAB;
  border-radius: 20%;
  min-width: 35px;
}

.clicker-input {
  width: 100px;
  background-color: white;
  border-radius: 5px;
  border-width: 1px;
  border-style: solid;
  font-size: 20px;
  padding-left: 35px;
  font-weight: bold;
}


/*.active {
  background-color: #BFBFBF;
  box-shadow: 1px -1px #747474;
}*/


.drop {
  display: block;
  border: solid;
  border-color: grey;
  border-radius: 5px;
  background-color: grey;
  min-height: 100px;
}

.skill {
    border: solid;
    border-color: grey;
    border-radius: 5px;
    background-color: white;
    padding: 10px;
}


.circled-plus {
  font-size: 50px;
  margin: auto;
  background-color: white;
  border-radius: 50%;
  color: black;
}

.worksheet-form {
  border: solid;
  border-color: grey;
  border-radius: 5px;
  padding: 10px;
  width: 300px;
}
.group {
  background-color: #EDEDED;
  border-radius: 5px;
  box-shadow: 5px -5px #747474;
  padding: 10px;
  margin: 10px;
}

.selected {
  background-color: #BFBFBF;
  box-shadow: 1px -1px #747474;
}

div, p {
  font-size: 16px;
}

h3 {
  font-size: 20px;
  font-weight: bold;ctrl
}
